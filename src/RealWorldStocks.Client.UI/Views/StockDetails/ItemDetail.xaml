<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="RealWorldStocks.Client.UI.ItemDetail"
	d:DesignWidth="480" d:DesignHeight="800">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="LabelTextBlock" Style="{StaticResource PhoneTextNormalStyle}" HorizontalAlignment="Stretch"></TextBlock>
        <TextBlock x:Name="ValueTextBlock" Style="{StaticResource PhoneTextNormalStyle}" Grid.Column="1" HorizontalAlignment="Stretch"></TextBlock>
    </Grid>
</UserControl>