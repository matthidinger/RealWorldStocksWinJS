<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:RealWorldWPDev.Client.Converters">

    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityInvertedConverter"  InvertValue="true" />
    <converters:StringVisibilityConverter x:Key="StringVisibilityConverter" />
    <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    <converters:ToUppercaseConverter x:Key="ToUppercaseConverter"/>
    <converters:ToLowercaseConverter x:Key="ToLowercaseConverter"/>
    <converters:RelativeDateTimeConverter x:Key="RelativeDateTimeConverter" />
    <converters:CollectionCountVisibilityConverter x:Key="CollectionCountVisibilityConverter" />

</ResourceDictionary>